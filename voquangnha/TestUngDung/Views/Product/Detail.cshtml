<div class="content">
    <p><i class="fa fa-home">&nbsp;</i>@Html.ActionLink("Trang chủ", "Index", "Home") >> <a href="/danh-muc-san-pham/@category.ID">@category.Name</a> >> @Model.Name</p>
    
</div>
<hr />
<br />
<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4"> <img id="main-image" src="@Url.Content(Model.Image)" width="350" /> </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">

                            <div class="mt-4 mb-3">

                                <h2>@Model.Name</h2>
                                <div class="price d-flex flex-row align-items-center">
                                   
                                    <p style=" color:red;font-size:25px;border-style: outset">Giá: @string.Format("{0:#,##0}", Model.UnitCost) <span>VNĐ</span></p>

                                </div>
                                <div class="price d-flex flex-row align-items-center"style="height:150px; margin-top:30px">
                                    <h4>Mô tả</h4>
                                    <span class="act-price">@Model.Description</span>

                                </div>

                            </div>
                            

                            <div class="cart mt-4 align-items-center"> <button class="btn btn-danger text-uppercase mr-2 px-4">Thêm vào giỏ hàng</button> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
